<UserControl x:Class="prog2500_assignment1_matheusoliveira.TagEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:prog2500_assignment1_matheusoliveira"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Margin" Value="100,0,100,5" />
            <Setter Property="Panel.ZIndex" Value="10" />
        </Style>
    </UserControl.Resources>
    <StackPanel VerticalAlignment="Center" Orientation="Vertical" Opacity="0.75" Background="Black">
        <Label Foreground="White" Margin="0,10,0,0" HorizontalAlignment="Center" FontSize="36" FontFamily="Rockwell">Tag Editor</Label>
        <TextBox x:Name="tagEditingTitle" />
        <TextBox x:Name="tagEditingArtist" />
        <TextBox x:Name="tagEditingAlbum" />
        <TextBox x:Name="tagEditingYear" />
        <Button x:Name="tagSave" Click="Button_Save" HorizontalAlignment="Center" Padding="10,0" Margin="0,5,0,10">Save</Button>
    </StackPanel>
</UserControl>
